<% if (peoples.length>0){
    for (i=0;i<peoples.length; i++) {%>
    <div class="col-md-12 shadow-sm border pb-1 mt-2  bg-white text-dark">
        <div class="row mt-md-3 mt-2">
            <div class="col-12 p-1" >
                <span class="carSideBarsType"><%- peoples[i].name+' '+peoples[i].family %></span> -
                <span class="carSideBarCity"><%- peoples[i].phone %></span><br>
            </div>
            <div class="col-12 p-1" >
            <div class="row" >
                <div class="col-md-6">
                    <a href="<%-host%>/people/car/<%- peoples[i].id %>"  class="btn mainBtn  btn-sm btn-block"  > آگهی های خودرو </a>
                </div>
                <div class="col-md-6">
                    <a href="<%-host%>/people/b/<%- peoples[i].id %>"  class="btn mainBtn  btn-sm btn-block"  > آگهی های کسب و کار </a>
                </div>
            </div>
            </div>
        </div>
    </div>
    <%}
} else {
    %>
    <div class="col-md-12 shadow-sm border pb-1 mt-2  bg-white text-dark">
        <div class="row mt-md-3 mt-2">
            <div class="col-12 p-0" align="center">
                موری برای نمایش وجود ندارد
            </div>
        </div>
    </div>
<%
}%>