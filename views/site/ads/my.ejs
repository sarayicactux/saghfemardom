                <h1 class="mainHeader text-dark">سقف مردم ..... سقف مردم</h1>

            </div>

        </div>
    </div>
    <div class="row"  style="margin-top:10px">

        <div class="col-md-3 mb-md-0  mb-1 newsBar">
            <%- include("../layouts/news.ejs",{
            res:res
            }) %>
        </div>
        <div class="col-md-6 mb-md-0 mb-1 ">
            <div class="row pl-md-2  ">
                <div class="col-md-12 shadow-sm border pb-1  bg-white text-dark">
                    <div class="p-2 row p-0">
                        <div class="col-12 m-0 p-0">
                            <h2  class="boxesWline linkColor"> سقف من </h2>
                        </div>
                    </div>
                    <div class="row  mt-1 mb-2">
                        <div class="col-md-12">

                            <div class="col-12">
                                <div class="row">
                                    <div class="col-4 border bg-primary pt-2 pb-2 pl-0 pr-0 text-white text-center carCel">نام و نام خانوادگی</div>
                                    <div class="col-4 border bg-primary pt-2 pb-2 pl-0 pr-0 text-white text-center carCel">کد کاربری</div>
